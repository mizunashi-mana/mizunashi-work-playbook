#!/usr/bin/env bash

set -euo pipefail
[ "${TRACE:-false}" = 'true' ] && set -x

PROJECT_DIR="$(cd "$(dirname "$(dirname "$0")")" && pwd)"

LOCAL_BIND_PORT="${LOCAL_BIND_PORT:-9090}"

exec ssh \
  -i "$PROJECT_DIR/assets/vagrant_ssh_privkey" \
  -L "${LOCAL_BIND_PORT}:localhost:9090" \
  -N \
  vagrant@192.168.61.34
