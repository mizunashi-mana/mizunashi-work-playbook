/var/log/td-agent/td-agent.log {
  daily
  dateext
  dateformat -%Y%m%d-%s
  rotate 10
  maxsize 1M
  maxage 7

  missingok
  compress
  delaycompress
  notifempty
  create 640 td-agent adm

  sharedscripts
  postrotate
     pid=/var/run/td-agent/td-agent.pid
    if [ -s "$pid" ]
    then
      kill -USR1 "$(cat $pid)"
    fi
  endscript
}
