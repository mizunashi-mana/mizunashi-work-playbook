#!/usr/bin/env bash

[ "$TRACE" = 'true' ] && set -x
set -euo pipefail

atexit() {
  [ -n "${TMPFILE:-}" ] && rm -rf "$TMPFILE"
}

trap atexit EXIT
trap atexit SIGTERM

FILENAME="$1"
TMPFILE="$(mktemp "/tmp/$(basename "$0").tmp.XXXXXX")"

sed \
  "s|#include TESTFILE;|include $FILENAME;|" \
  /etc/nginx/nginx.conf \
  | tee "$TMPFILE"

nginx -t -c "$TMPFILE"
